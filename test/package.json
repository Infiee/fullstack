  "scripts": {
    "encrypt": "dotenvx encrypt",
    "prod": "dotenvx encrypt -f .env.production",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev1": "dotenvx run -- nest start --watch",
    "start:dev": "dotenvx run -f .env.production -- nest start --watch",
    "dev": "DOTENV_PRIVATE_KEY_PRODUCTION=afcb1dbeca06d148dd053952ef1422395a9fec0c13ba7dd222f04aba2b31cb57 dotenvx run -- nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "dotenvx run -f .env.production -- node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.11.5",
    "@nestjs/common": "^10.4.1",
    "@nestjs/core": "^10.4.1",
